
#include <iostream>
#include <math.h>
using namespace std;

//the function placeholder

bool UpdateNutrientInfo(String product, float amount) 
{
    return true;
}

// If parameter is not true, test fails
#define IS_TRUE(x) { if (!(x)) std::cout << __FUNCTION__ << " failed on line " << __LINE__ << std::endl; }

// Test for UpdateNutrientInfo
// Testing the UpdateNutrientInfo function, which takes in a string of food and a float value of the amount of food returns true if the data input is successful/valid
void test_UpdateNutrientInfo()
{
    IS_TRUE(UpdateNutrientInfo("apple", pow(1.175494351, -38)); //testing for limit of float
    IS_TRUE(UpdateNutrientInfo("apple", pow(1.175494351, -39)); // testing for above of float limit
    IS_TRUE(!UpdateNutrientInfo("apple", -1); //testing for negative values
    IS_TRUE(!UpdateNutrientInfo("apple", 0);    //testing for 0 values
    IS_TRUE(UpdateNutrientInfo("apple", 1); //testing for normal values
    IS_TRUE(UpdateNutrientInfo("apple", pow(3.402823466, 38)); // testing for limit of float 
    IS_TRUE(UpdateNutrientInfo("apple", pow(3.402823466, 38)+1); // testing fot above limit 
    return;
}

int main(void) {
    // Call the test created for update nutrient info
    test_UpdateNutrientInfo();
    return 0;
}
